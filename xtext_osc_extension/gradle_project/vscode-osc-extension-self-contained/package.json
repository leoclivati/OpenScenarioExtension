{
  "name": "openscenario-langauge-extension",
  "displayName": "ASAM OpenSCENARIO",
  "description": "OpenSCENARIO Language Extension",
  "version": "0.0.1",
  "publisher": "BMW",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "out/extension",
  "contributes": {
    "languages": [{
      "id": "osc",
      "aliases": ["OpenSCENARIO", "osc"],
      "extensions": [".osc"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "osc",
      "scopeName": "source.osc",
      "path": "./syntaxes/osc.tmLanguage.json"
    }],
    "commands":[{
      "command": "osc.a.proxy",
      "title": "OSC Command A"
       },{
       "command": "osc.b",
       "title": "OSC Command B"
       }]
  },
  "devDependencies": {
    "@types/node": "^22.4.1",
    "@types/vscode": "^1.92.0",
    "typescript": "^5.5.4",
    "vscode-test": "^1.6.1",
    "@vscode/vsce": "^3.1.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
